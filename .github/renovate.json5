{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "com.android.tools.build:gradle-api",
      ],
      "allowedVersions": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$",
    },
    {
      "matchPackageNames": [
        "com.android.tools.build:apksig",
      ],
      "allowedVersions": ".*-alpha.*",
    }
  ],
}
